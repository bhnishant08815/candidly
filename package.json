{
  "name": "stratahire-automation",
  "version": "1.0.0",
  "description": "Playwright automation scripts for StrataHire",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:login": "playwright test tests/login --headed",
    "test:job-posting": "playwright test tests/job-posting --headed",
    "test:job-posting:headless": "playwright test tests/job-posting",
    "test:job-posting:regression": "playwright test tests/job-posting/job-posting-regression.spec.ts --headed",
    "test:applicants": "playwright test tests/Applicants --headed",
    "test:applicants:headless": "playwright test tests/Applicants",
    "test:applicants:regression": "playwright test tests/Applicants/applicants-regression.spec.ts --headed",
    "test:regression": "playwright test --grep @Regression --headed",
    "test:integration": "playwright test tests/integration --headed",
    "test:interview": "playwright test tests/Interview --headed",
    "test:all": "playwright test --headed",
    "job-posting": "playwright test tests/job-posting/job-posting.spec.ts --headed",
    "job-posting:ai": "playwright test tests/job-posting/job-posting-ai.spec.ts --headed",
    "job-posting:document": "playwright test tests/job-posting/job-posting-document-upload.spec.ts --headed",
    "applicants": "playwright test tests/Applicants/applicants.spec.ts --headed",
    "interview": "playwright test tests/Interview/Interview.spec.ts --headed",
    "login": "playwright test tests/login/login.spec.ts --headed",
    "test:parallel:job-applicants": "npm-run-all --parallel test:job-posting test:applicants",
    "test:parallel:job-interview": "npm-run-all --parallel test:job-posting test:interview",
    "test:parallel:job-login": "npm-run-all --parallel test:job-posting test:login",
    "test:parallel:applicants-interview": "npm-run-all --parallel test:applicants test:interview",
    "test:parallel:job-applicants:headless": "npm-run-all --parallel \"test:job-posting:headless\" \"test:applicants:headless\"",
    "report": "node -r ts-node/register utils/scripts/show-report.ts",
    "report:client": "node -r ts-node/register utils/reporting/report-packager.ts",
    "report:view": "start client-reports/latest-report.html",
    "validate:locators": "npx playwright test tests/locator-validation.spec.ts",
    "test:shard": "playwright test --shard=$npm_config_shard/$npm_config_total"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@zerostep/playwright": "^0.1.5",
    "archiver": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  }
}
